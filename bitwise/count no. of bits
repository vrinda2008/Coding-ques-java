//check total no. of bits 
/*
eg: ip:5
    op: 3 //101
    
    ip:12
    op:4 //1100
*/


public class countbits {
    public static void main(String[] args) {
        int n=5;
        int c=0;
        while(n!=0){
            n=n>>1;
            c++;
        }
        System.out.println(c);
    }
}
